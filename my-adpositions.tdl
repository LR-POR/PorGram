;;; Case-marking adpositions

dat-marker_a := prep-case-marking-adp-lex &
  [ STEM < "a" >,
    SYNSEM.LOCAL [ CONT [ HOOK [ ICONS-KEY.IARG1 #clause,
                                 CLAUSE-KEY #clause ],
                          ICONS.LIST < > ],
                   CAT.HEAD [ CASE dat ] ] ].

